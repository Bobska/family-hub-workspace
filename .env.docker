# =============================================================================
# FamilyHub Docker Environment
# =============================================================================
# For Docker Compose development setup
# Copy this to .env for Docker development

# =============================================================================
# PostgreSQL Database Settings (Docker)
# =============================================================================
POSTGRES_DB=familyhub_docker
POSTGRES_USER=familyhub_user
POSTGRES_PASSWORD=DockerPassword123!
POSTGRES_HOST=db                            # Docker service name
POSTGRES_PORT=5432

# =============================================================================
# Django Docker Settings
# =============================================================================
SECRET_KEY=django-insecure-docker-dev-key-change-for-production-abcdef1234567890
DEBUG=True                                  # Development mode
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web
DJANGO_SETTINGS_MODULE=FamilyHub.settings.docker

# =============================================================================
# Superuser Creation
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@familyhub.docker
DJANGO_SUPERUSER_PASSWORD=admin123

# =============================================================================
# Environment Type
# =============================================================================
IS_DOCKER=True                             # Docker environment

# =============================================================================
# Redis Cache Settings (Docker)
# =============================================================================
REDIS_URL=redis://redis:6379/0             # Docker Redis service
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Email Configuration (Docker Development)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=dev@familyhub.docker
ADMIN_EMAIL=admin@familyhub.docker

# =============================================================================
# Security Settings (Docker Development)
# =============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=86400                    # 24 hours

# =============================================================================
# File Paths (Docker)
# =============================================================================
MAX_UPLOAD_SIZE=10485760
MEDIA_ROOT=/app/FamilyHub/media
STATIC_ROOT=/app/FamilyHub/staticfiles

# =============================================================================
# Logging (Docker)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=/app/FamilyHub/logs/familyhub.log

# =============================================================================
# Docker Compose Settings
# =============================================================================
COMPOSE_PROJECT_NAME=familyhub-dev
POSTGRES_VOLUME=postgres_data_dev
REDIS_VOLUME=redis_data_dev
STATIC_VOLUME=static_volume_dev
MEDIA_VOLUME=media_volume_dev

# =============================================================================
# Application Settings
# =============================================================================
TIME_ZONE=Pacific/Auckland
LANGUAGE_CODE=en-nz
ADMIN_URL=admin/

# =============================================================================
# Health Check Settings
# =============================================================================
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_CACHE=True
