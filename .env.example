# =============================================================================
# FamilyHub Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# Different templates: .env.local (development) | .env.docker (containers)

# =============================================================================
# PostgreSQL Database Settings
# =============================================================================
POSTGRES_DB=familyhub_db                    # Database name
POSTGRES_USER=familyhub_user                # Database user  
POSTGRES_PASSWORD=ChangeMeSecurePassword123! # CHANGE THIS! Use strong password
POSTGRES_HOST=db                            # 'db' for Docker, 'localhost' for local
POSTGRES_PORT=5432                          # PostgreSQL port

# =============================================================================
# Django Core Settings
# =============================================================================
SECRET_KEY=generate-new-key-here            # Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DEBUG=False                                 # Set True for development only
ALLOWED_HOSTS=localhost,127.0.0.1          # Add your domain here (comma-separated)
DJANGO_SETTINGS_MODULE=FamilyHub.settings.docker  # Options: .development | .docker | .production

# =============================================================================
# Superuser Creation (first run only)
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=ChangeMeAdmin123! # CHANGE THIS! Strong password required

# =============================================================================
# Environment Type
# =============================================================================
IS_DOCKER=True                              # Set False for local development

# =============================================================================
# Redis Cache Settings (Production/Docker)
# =============================================================================
REDIS_URL=redis://redis:6379/0              # Redis connection URL
REDIS_HOST=redis                            # Redis host ('redis' for Docker, 'localhost' for local)
REDIS_PORT=6379                             # Redis port
REDIS_DB=0                                  # Redis database number

# =============================================================================
# Email Configuration (Optional - for production notifications)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # console | smtp
EMAIL_HOST=smtp.gmail.com                   # SMTP server
EMAIL_PORT=587                              # SMTP port (587 for TLS, 465 for SSL)
EMAIL_USE_TLS=True                          # Use TLS encryption
EMAIL_USE_SSL=False                         # Use SSL encryption (alternative to TLS)
EMAIL_HOST_USER=your-email@gmail.com        # SMTP username
EMAIL_HOST_PASSWORD=your-app-password       # SMTP password (use app passwords for Gmail)
DEFAULT_FROM_EMAIL=noreply@familyhub.com    # Default sender email
ADMIN_EMAIL=admin@familyhub.com             # Admin notification email

# =============================================================================
# Security Settings (Production)
# =============================================================================
SECURE_SSL_REDIRECT=False                   # Set True when using HTTPS
SECURE_PROXY_SSL_HEADER_NAME=HTTP_X_FORWARDED_PROTO  # Proxy SSL header
SECURE_PROXY_SSL_HEADER_VALUE=https        # Expected header value
SESSION_COOKIE_SECURE=False                # Set True when using HTTPS
CSRF_COOKIE_SECURE=False                   # Set True when using HTTPS
SESSION_COOKIE_AGE=3600                    # Session timeout in seconds (1 hour)

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_UPLOAD_SIZE=10485760                    # Maximum file upload size (10MB in bytes)
MEDIA_ROOT=/app/FamilyHub/media             # Media files directory
STATIC_ROOT=/app/FamilyHub/staticfiles      # Static files directory

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO                              # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE=/app/FamilyHub/logs/familyhub.log  # Log file path
LOG_MAX_SIZE=5242880                        # Max log file size (5MB in bytes)
LOG_BACKUP_COUNT=5                          # Number of log backup files

# =============================================================================
# Application Settings
# =============================================================================
TIME_ZONE=Pacific/Auckland                  # Application timezone
LANGUAGE_CODE=en-nz                         # Language/locale code
USE_TZ=True                                 # Enable timezone support
USE_I18N=True                              # Enable internationalization
USE_L10N=True                              # Enable localization

# =============================================================================
# Admin Interface Customization
# =============================================================================
ADMIN_URL=admin/                            # Admin URL path (change for security)
ADMIN_SITE_HEADER=FamilyHub Administration  # Admin site header
ADMIN_SITE_TITLE=FamilyHub Admin            # Admin site title
ADMIN_INDEX_TITLE=Welcome to FamilyHub Administration  # Admin index title

# =============================================================================
# Development Settings (Local Development Only)
# =============================================================================
# Uncomment these for local development
# DEBUG_TOOLBAR=True                        # Enable Django Debug Toolbar
# INTERNAL_IPS=127.0.0.1,localhost          # Internal IPs for debug toolbar

# =============================================================================
# Docker Compose Settings
# =============================================================================
COMPOSE_PROJECT_NAME=familyhub              # Docker Compose project name
POSTGRES_VOLUME=postgres_data               # PostgreSQL volume name
REDIS_VOLUME=redis_data                     # Redis volume name
STATIC_VOLUME=static_volume                 # Static files volume name
MEDIA_VOLUME=media_volume                   # Media files volume name

# =============================================================================
# Health Check Settings
# =============================================================================
HEALTH_CHECK_ENABLED=True                   # Enable health check endpoint
HEALTH_CHECK_DATABASE=True                  # Include database in health checks
HEALTH_CHECK_CACHE=True                     # Include cache in health checks

# =============================================================================
# Performance Settings
# =============================================================================
DATABASE_CONN_MAX_AGE=600                   # Database connection max age (10 minutes)
CACHE_TIMEOUT=300                           # Default cache timeout (5 minutes)
SESSION_CACHE_ALIAS=default                 # Session cache alias

# =============================================================================
# Backup Settings (Future Implementation)
# =============================================================================
# BACKUP_ENABLED=False                      # Enable automated backups
# BACKUP_SCHEDULE=0 2 * * *                 # Backup schedule (cron format)
# BACKUP_RETENTION_DAYS=30                  # Backup retention period
# BACKUP_STORAGE_PATH=/backups              # Backup storage directory

# =============================================================================
# Monitoring & APM (Future Implementation)
# =============================================================================
# SENTRY_DSN=                               # Sentry error tracking DSN
# APM_ENABLED=False                         # Enable Application Performance Monitoring
# NEW_RELIC_LICENSE_KEY=                    # New Relic license key
# DATADOG_API_KEY=                          # Datadog API key

# =============================================================================
# Third-Party Integrations (Future Implementation)
# =============================================================================
# AWS_ACCESS_KEY_ID=                        # AWS access key for S3 storage
# AWS_SECRET_ACCESS_KEY=                    # AWS secret key
# AWS_STORAGE_BUCKET_NAME=                  # S3 bucket name for media files
# AWS_S3_REGION_NAME=us-east-1              # AWS region

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. NEVER commit .env files with real credentials to version control
# 2. Generate new SECRET_KEY for each environment
# 3. Use strong passwords for POSTGRES_PASSWORD and DJANGO_SUPERUSER_PASSWORD
# 4. Set DEBUG=False in production
# 5. Configure ALLOWED_HOSTS properly for your domain
# 6. Enable SSL settings when using HTTPS in production
# 7. Consider using environment-specific .env files (.env.local, .env.docker, .env.prod)
#
# Generate SECRET_KEY:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
