# FamilyHub Environment Variables
# Copy this file to .env and modify the values as needed

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-please
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,familyhub.local

# Database Settings
POSTGRES_DB=familyhub
POSTGRES_USER=familyhub_user
POSTGRES_PASSWORD=changeme123
DATABASE_URL=postgresql://familyhub_user:changeme123@postgres:5432/familyhub

# Redis Settings
REDIS_URL=redis://redis:6379/0

# Email Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Timezone
TIME_ZONE=Pacific/Auckland

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
